{
    "Uri Action Tag": {
        "prefix": "fUriAction",
        "body": [
            "<f:uri.action",
            "\tabsolute=\"${1:false}\"",
            "\taction=\"${2}\"",
            "\taddQueryString=\"${3:false}\"",
            "\tadditionalParams=\"${4:array}\"",
            "\targuments=\"${5:array}\"",
            "\targumentsToBeExcludedFromQueryString=\"${6:array}\"",
            "\tcontroller=\"${7}\"",
            "\textensionName=\"${8}\"",
            "\tformat=\"${9}\"",
            "\tlanguage=\"${10}\"",
            "\tlinkAccessRestrictedPages=\"${11:false}\"",
            "\tnoCache=\"${12:false}\"",
            "\tpageType=\"${13:0}\"",
            "\tpageUid=\"${14}\"",
            "\tpluginName=\"${15}\"",
            "\tsection=\"${16}\">",
            "\t$17",
            "</f:uri.action>"
        ],
        "description": "A ViewHelper for creating URIs to extbase actions."
    },
    "Uri External Tag": {
        "prefix": "fUriExternal",
        "body": [
            "<f:uri.external",
            "\tdefaultScheme=\"${1:https}\"",
            "\turi=\"${2}\">",
            "\t$3",
            "</f:uri.external>"
        ],
        "description": "A ViewHelper for creating URIs to external targets."
    },
    "Uri Image Tag": {
        "prefix": "fUriImage",
        "body": [
            "<f:uri.image",
            "\tabsolute=\"${1:false}\"",
            "\tbase64=\"${2:false}\"",
            "\tcrop=\"${3}\"",
            "\tcropVariant=\"${4:default}\"",
            "\tfileExtension=\"${5}\"",
            "\theight=\"${6}\"",
            "\timage=\"${7}\"",
            "\tmaxHeight=\"${8}\"",
            "\tmaxWidth=\"${9}\"",
            "\tminHeight=\"${10}\"",
            "\tminWidth=\"${11}\"",
            "\tsrc=\"${12}\"",
            "\ttreatIdAsReference=\"${13:false}\"",
            "\twidth=\"${14}\">",
            "\t$15",
            "</f:uri.image>"
        ],
        "description": "Resizes a given image (if required) and returns its relative path."
    },
    "Uri Page Tag": {
        "prefix": "fUriPage",
        "body": [
            "<f:uri.page",
            "\tabsolute=\"${1:false}\"",
            "\taddQueryString=\"${2:false}\"",
            "\tadditionalParams=\"${3:array}\"",
            "\targumentsToBeExcludedFromQueryString=\"${4:array}\"",
            "\tlanguage=\"${5}\"",
            "\tlinkAccessRestrictedPages=\"${6:false}\"",
            "\tnoCache=\"${7:false}\"",
            "\tpageType=\"${8:0}\"",
            "\tpageUid=\"${9}\"",
            "\tsection=\"${10}\">",
            "\t$11",
            "</f:uri.page>"
        ],
        "description": "A ViewHelper for creating URIs to TYPO3 pages."
    },
    "Uri Resource Tag": {
        "prefix": "fUriResource",
        "body": [
            "<f:uri.resource",
            "\tabsolute=\"${1:false}\"",
            "\textensionName=\"${2}\"",
            "\tpath=\"${3}\"",
            "\tuseCacheBusting=\"${4:true}\">",
            "\t$5",
            "</f:uri.resource>"
        ],
        "description": "A ViewHelper for creating URIs to resources."
    },
    "Uri Typolink Tag": {
        "prefix": "fUriTypolink",
        "body": [
            "<f:uri.typolink",
            "\tabsolute=\"${1:false}\"",
            "\taddQueryString=\"${2:false}\"",
            "\taddQueryStringExclude=\"${3}\"",
            "\tadditionalParams=\"${4}\"",
            "\tlanguage=\"${5}\"",
            "\tparameter=\"${6}\"",
            "\ttarget=\"${7}\"",
            "\ttextWrap=\"${8}\"",
            "\ttitle=\"${9}\">",
            "\t$10",
            "</f:uri.typolink>"
        ],
        "description": "A ViewHelper to create URIs from fields supported by the link wizard."
    },
    "f:last ViewHelper": {
        "prefix": "fLast",
        "body": [
            "<f:last value=\"{${1:0: 'first', 1: 'second'}}\" />"
        ],
        "description": "Returns the last item of an array."
    },
    "f:layout ViewHelper": {
        "prefix": "fLayout",
        "body": [
            "<f:layout name=\"${1:main}\" />"
        ],
        "description": "Selects a layout to be used for the current template."
    },
    "f:media ViewHelper": {
        "prefix": "fMedia",
        "body": [
            "<f:media file=\"{${1:file}}\" width=\"${2:400}\" height=\"${3:375}\" ${4:additionalConfig=\"{loop: '1', autoplay: '1'}\"} />"
        ],
        "description": "Renders a given media file with the correct HTML tag."
    },
    "f:or ViewHelper": {
        "prefix": "fOr",
        "body": [
            "{${1:undefinedVariable} -> f:or(alternative=${2:fallback})}"
        ],
        "description": "Use alternative text if content is null."
    },
    "f:render ViewHelper": {
        "prefix": "fRender",
        "body": [
            "<f:render section=\"${1:someSection}\" partial=\"${2:partialName}\" arguments=\"${3:{foo: someVariable}}\" ${4:optional=false} ${5:debug=true} ${6:delegate=\"\"} />"
        ],
        "description": "Renders a section or partial with specified arguments."
    },
    "f:replace ViewHelper": {
        "prefix": "fReplace",
        "body": [
            "<f:replace value=\"${1:Hello World}\" search=\"${2:World}\" replace=\"${3:Fluid}\" />"
        ],
        "description": "Replaces one or multiple strings with other strings."
    },
    "f:section ViewHelper": {
        "prefix": "fSection",
        "body": [
            "<f:section name=\"${1:sectionName}\">${2:This is a section.}</f:section>"
        ],
        "description": "Declares sections in templates for later use."
    },
    "f:spaceless ViewHelper": {
        "prefix": "fSpaceless",
        "body": [
            "<f:spaceless>\n\t${1:<div><div><div>text\n\ntext</div></div></div>}\n</f:spaceless>"
        ],
        "description": "Removes redundant spaces between HTML tags."
    },
    "f:split ViewHelper": {
        "prefix": "fSplit",
        "body": [
            "<f:split value=\"${1:1,5,8}\" separator=\"${2:,}\" limit=\"${3:2}\" />"
        ],
        "description": "Splits a string by the specified separator."
    },
    "f:switch ViewHelper": {
        "prefix": "fSwitch",
        "body": [
            "<f:switch expression=\"{${1:person.gender}}\">\n\t<f:case value=\"${2:male}\">Mr.</f:case>\n\t<f:case value=\"${3:female}\">Mrs.</f:case>\n\t<f:defaultCase>Mr. / Mrs.</f:defaultCase>\n</f:switch>"
        ],
        "description": "Switches content based on the value or expression."
    },
    "f:then ViewHelper": {
        "prefix": "fThen",
        "body": [
            "<f:then>\n\t${1:content}\n</f:then>"
        ],
        "description": "Used within <f:if> to specify what should be rendered if the condition is true."
    },
    "f:translate ViewHelper": {
        "prefix": "fTranslate",
        "body": [
            "<f:translate key=\"${1:key1}\" extensionName=\"${2:MyExt}\" ${3:arguments=${4:{0: 'dog', 1: 'fox'}} default=\"${5:default value}\" />"
        ],
        "description": "Translates a key from locallang or custom locallang file."
    },
    "f:variable ViewHelper": {
        "prefix": "fVariable",
        "body": [
            "<f:variable name=\"${1:myvariable}\" value=\"${2:some value}\" />"
        ],
        "description": "Assigns a template variable."
    }
}
