{
  "Uri Action ViewHelper": {
    "prefix": "fUriAction",
    "body": [
      "<f:uri.action",
      "\taction=\"${1:index}\"",
      "\tcontroller=\"${2:Default}\"",
      "\tpluginName=\"${3:MyPlugin}\"",
      "\textensionName=\"${4:MyExtension}\"",
      "\targuments=\"{${5:arguments}}\"",
      ">",
      "\t${6}",
      "</f:uri.action>"
    ],
    "description": "A ViewHelper for creating URIs to extbase actions."
  },
  "Uri External ViewHelper": {
    "prefix": "fUriExternal",
    "body": [
      "<f:uri.external",
      "\tdefaultScheme=\"${1:https}\"",
      "\turi=\"${2:https://example.com}\"",
      ">",
      "\t${3}",
      "</f:uri.external>"
    ],
    "description": "A ViewHelper for creating URIs to external targets."
  },
  "Uri Image ViewHelper": {
    "prefix": "fUriImage",
    "body": [
      "<f:uri.image",
      "\timage=\"{${1:imageObject}}\"",
      "\talt=\"${2:Alt text}\"",
      "\twidth=\"${3:800}\"",
      "\theight=\"${4:auto}\"",
      "\tfileExtension=\"${5:jpg}\"",
      ">",
      "\t${6}",
      "</f:uri.image>"
    ],
    "description": "Resizes a given image (if required) and returns its relative path."
  },
  "Uri Page ViewHelper": {
    "prefix": "fUriPage",
    "body": [
      "<f:uri.page",
      "\tabsolute=\"${1:false}\"",
      "\taddQueryString=\"${2:false}\"",
      "\tadditionalParams=\"{${3:additionalParams}}\"",
      "\targumentsToBeExcludedFromQueryString=\"{${4:argumentsToExclude}}\"",
      "\tlanguage=\"${5:0}\"",
      "\tlinkAccessRestrictedPages=\"${6:false}\"",
      "\tnoCache=\"${7:false}\"",
      "\tpageType=\"${8:0}\"",
      "\tpageUid=\"${9:1}\"",
      "\tsection=\"${10:section}\"",
      ">",
      "\t${11}",
      "</f:uri.page>"
    ],
    "description": "A ViewHelper for creating URIs to TYPO3 pages."
  },
  "Uri Resource ViewHelper": {
    "prefix": "fUriResource",
    "body": [
      "<f:uri.resource",
      "\tabsolute=\"${1:false}\"",
      "\textensionName=\"${2:MyExtension}\"",
      "\tpath=\"${3:Resources/Public/Images/image.jpg}\"",
      "\tuseCacheBusting=\"${4:true}\"",
      ">",
      "\t${5}",
      "</f:uri.resource>"
    ],
    "description": "A ViewHelper for creating URIs to resources."
  },
  "Uri Typolink ViewHelper": {
    "prefix": "fUriTypolink",
    "body": [
      "<f:uri.typolink parameter=\"${1:1}\">",
      "\t${2}",
      "</f:uri.typolink>"
    ],
    "description": "A ViewHelper to create URIs from fields supported by the link wizard."
  }
}
