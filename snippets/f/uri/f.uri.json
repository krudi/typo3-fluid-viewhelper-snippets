{
    "Uri Action ViewHelper": {
        "prefix": "fUriAction",
        "body": [
            "<f:uri.action",
            "\taction=\"${1}\"",
            "\tcontroller=\"${2}\"",
            "\tpluginName=\"${3}\"",
            "\textensionName=\"${4}\"",
            "\targuments=\"${5:array}\"",
            ">",
            "\t$6",
            "</f:uri.action>"
        ],
        "description": "A ViewHelper for creating URIs to extbase actions."
    },
    "Uri External ViewHelper": {
        "prefix": "fUriExternal",
        "body": [
            "<f:uri.external",
            "\tdefaultScheme=\"${1:https}\"",
            "\turi=\"${2}\"",
            ">",
            "\t$3",
            "</f:uri.external>"
        ],
        "description": "A ViewHelper for creating URIs to external targets."
    },
    "Uri Image ViewHelper": {
        "prefix": "fUriImage",
        "body": [
            "<f:uri.image",
            "\timage=\"{${1:imageObject}}\"",
            "\talt=\"${2:alt text}\"",
            "\twidth=\"${3:width}\"",
            "\theight=\"${4:height}\"",
            "\tfileExtension=\"${5:fileExtension}\"",
            ">",
            "\t$6",
            "</f:uri.image>"
        ],
        "description": "Resizes a given image (if required) and returns its relative path."
    },
    "Uri Page ViewHelper": {
        "prefix": "fUriPage",
        "body": [
            "<f:uri.page",
            "\tabsolute=\"${1:false}\"",
            "\taddQueryString=\"${2:false}\"",
            "\tadditionalParams=\"${3:array}\"",
            "\targumentsToBeExcludedFromQueryString=\"${4:array}\"",
            "\tlanguage=\"${5}\"",
            "\tlinkAccessRestrictedPages=\"${6:false}\"",
            "\tnoCache=\"${7:false}\"",
            "\tpageType=\"${8:0}\"",
            "\tpageUid=\"${9}\"",
            "\tsection=\"${10}\"",
            ">",
            "\t$11",
            "</f:uri.page>"
        ],
        "description": "A ViewHelper for creating URIs to TYPO3 pages."
    },
    "Uri Resource ViewHelper": {
        "prefix": "fUriResource",
        "body": [
            "<f:uri.resource",
            "\tabsolute=\"${1:false}\"",
            "\textensionName=\"${2}\"",
            "\tpath=\"${3}\"",
            "\tuseCacheBusting=\"${4:true}\"",
            ">",
            "\t$5",
            "</f:uri.resource>"
        ],
        "description": "A ViewHelper for creating URIs to resources."
    },
    "Uri Typolink ViewHelper": {
        "prefix": "fUriTypolink",
        "body": [
            "<f:uri.typolink parameter=\"${6}\">",
            "\t$10",
            "</f:uri.typolink>"
        ],
        "description": "A ViewHelper to create URIs from fields supported by the link wizard."
    }
}
